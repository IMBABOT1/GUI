<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gui.HelloController">
    <TextArea fx:id="mainArea" editable="false" VBox.vgrow="ALWAYS"></TextArea>
    <HBox>
        <TextField fx:id="msgField" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#sendMsgAction"  promptText="Введите сообщение..." ></TextField>
        <Button text="Send message" onAction="#sendMsgAction"/>
    </HBox>
</VBox>
